{
    "$schema": "https://turbo.build/schema.json",
    "tasks": {
        "build": {
            "dependsOn": ["^build"],
            "outputs": ["dist/**", ".next/**", "build/**"]
        },
        "dev": {
            "cache": false,
            "persistent": true
        },
        "lint": {
            "dependsOn": ["^lint"]
        },
        "lint:fix": {
            "dependsOn": ["^lint:fix"]
        },
        "test:integration": {
            "dependsOn": ["^build"]
        },
        "test": {
            "dependsOn": ["^build"],
            "outputs": ["coverage/**"],
            "env": ["SKIP_INTEGRATION"]
        },
        "type-check": {
            "dependsOn": ["^build"]
        },
        "clean": {
            "cache": false
        }
    }
}
