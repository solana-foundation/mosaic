  "version": "0.1.0",
  "description": "Command-line interface for managing Token-2022 tokens with extensions",
  "type": "module",
  "main": "./dist/index.js",
  "bin": {
    "mosaic": "./dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc -b",
    "dev": "tsx src/index.ts",
