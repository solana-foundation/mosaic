{
  "name": "@mosaic/sdk",
  "version": "0.1.0",
  "description": "SDK for Mosaic with helper functions for issuance and management of any token",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc -b",
    "dev": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@mosaic/abl": "workspace:*",
    "@mosaic/tlv-account-resolution": "workspace:*",
    "@mosaic/token-acl": "workspace:*",
    "@solana-program/token-2022": "^0.5.0",
    "gill": "^0.10.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@typescript-eslint/eslint-plugin": "^8.34.0",
    "@typescript-eslint/parser": "^8.34.0",
    "eslint": "^9.32.0",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.8.3"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "keywords": [
    "solana",
    "token-2022",
    "extensions",
    "core",
    "hooks"
  ]
}
